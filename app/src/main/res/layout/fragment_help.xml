<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="preguntas_frecuentes_conectado"
    android:background="#C1C1C1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#FA3D3B"
            android:layout_marginTop="80dp"
            android:text="Chatea con un asesor"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#FA3D3B"
            android:layout_marginTop="30dp"
            android:text="Preguntas frecuentes"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintTop_toBottomOf="@id/button1"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#FA3D3B"
            android:layout_marginTop="30dp"
            android:text="Envia una solicitud"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintTop_toBottomOf="@id/button2"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>