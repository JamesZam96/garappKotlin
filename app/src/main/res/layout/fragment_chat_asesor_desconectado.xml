<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat_asesor_desconectado"
    android:background="@color/colorTres">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.060"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/advisorchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="CHAT ASESOR"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_one"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@id/layout_one"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="378dp"
            android:layout_height="322dp"
            android:layout_margin="10dp"

            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/advisorchat"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="17dp">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 1"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="85dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 3"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>