<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateAccount"
    android:background="#C1C1C1">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_two">

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/layout_two"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="País"
            app:layout_constraintTop_toBottomOf="@id/create_account"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="#3D99C3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ciudad"
            app:layout_constraintTop_toBottomOf="@id/country"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="#3D99C3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/registration_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="#3D99C3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/registration_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            app:layout_constraintTop_toBottomOf="@id/registration_password"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHighlight="#3D99C3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirm_reg_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Confirmar contraseña"
            app:layout_constraintTop_toBottomOf="@id/registration_email"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            app:cursorColor="@color/black"
            android:textColorHint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="#3D99C3"/>
        </com.google.android.material.textfield.TextInputLayout>

        
        <Button
            android:id="@+id/continue_registration"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Continuar"
            app:layout_constraintTop_toBottomOf="@id/confirm_reg_password"
            app:layout_constraintStart_toStartOf="@id/layout_two"
            app:layout_constraintEnd_toEndOf="@id/layout_two"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#FA3D3B"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            app:icon="@drawable/baseline_arrow_forward_ios_24"
            app:iconTint="#FFFFFF"
            app:iconSize="20dp"
            app:iconGravity="end"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>