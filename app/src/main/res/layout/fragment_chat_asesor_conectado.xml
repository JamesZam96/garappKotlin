<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chat_asesor_conectado"
    android:background="@color/colorTres">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_arrow_back_ios_24">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CHAT ASESOR"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_one"
            app:layout_constraintStart_toStartOf="@id/layout_one"
            app:layout_constraintTop_toTopOf="@id/layout_one" />

        <FrameLayout
            android:layout_width="378dp"
            android:layout_height="322dp"
            android:layout_margin="10dp"

            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 1"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="85dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="#FA3D3B"
                android:text="Mensaje 3"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>