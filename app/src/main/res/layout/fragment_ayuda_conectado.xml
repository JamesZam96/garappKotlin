<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayuda_conectado"
    android:background="@color/colorTres">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_arrow_back_ios_24">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ayuda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="AYUDA"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ayuda"
            app:layout_constraintStart_toStartOf="@+id/ayuda"
            app:layout_constraintTop_toTopOf="@+id/ayuda">

        </TextView>

        <FrameLayout
            android:layout_width="378dp"
            android:layout_height="322dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.735">

            <Button
                android:id="@+id/button5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FA3D3B"
                android:text="Chatea con un asesor"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/button6"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="90dp"
                android:backgroundTint="#FA3D3B"
                android:text="Envia una solicitud"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/button7"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:backgroundTint="#FA3D3B"
                android:text="Envia una solicitud"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>
        </FrameLayout>

        <ImageView
            android:id="@+id/exclamacion"
            android:layout_width="122dp"
            android:layout_height="137dp"

            android:layout_marginTop="104dp"
            android:src="@android:drawable/ic_dialog_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>