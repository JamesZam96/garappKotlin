<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTrafficLicense"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C1C1C1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_traffic_license">

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/layout_traffic_license"
            app:layout_constraintStart_toStartOf="@id/layout_traffic_license"
            app:layout_constraintEnd_toEndOf="@id/layout_traffic_license"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/title_traffic_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra tu licencia de trÃ¡nsito"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/create_account"
            app:layout_constraintStart_toStartOf="@id/layout_traffic_license"
            app:layout_constraintEnd_toEndOf="@id/layout_traffic_license"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/title_traffic_license"
            app:layout_constraintStart_toStartOf="@id/layout_traffic_license"
            app:layout_constraintEnd_toEndOf="@id/layout_traffic_license"
            android:layout_marginTop="30dp"
            android:id="@+id/image_traffic_license"
            android:src="@drawable/driving_license"
            />

        <Button
            android:id="@+id/continue_scan_front_traffic_license"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Continuar"
            app:layout_constraintTop_toBottomOf="@id/image_traffic_license"
            app:layout_constraintStart_toStartOf="@id/layout_traffic_license"
            app:layout_constraintEnd_toEndOf="@id/layout_traffic_license"
            android:layout_marginTop="100dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#FA3D3B"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            app:icon="@drawable/baseline_arrow_forward_ios_24"
            app:iconTint="#FFFFFF"
            app:iconSize="20dp"
            app:iconGravity="end"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>