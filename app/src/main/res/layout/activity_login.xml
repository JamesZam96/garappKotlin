<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/colorTres">

    <!---

Linea de comentario

    -->

    <TextView
        android:id="@+id/iniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/garapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garapper"
        android:textColor="@color/colorUno"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iniciarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/email1"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/garapper"
        android:layout_marginTop="80sp"
        android:autofillHints="emailAddress"
        android:hint="Correo electrónico"
        android:background="@drawable/edit_text_border"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        />

    <EditText
        android:id="@+id/password1"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email1"
        android:layout_marginTop="80sp"
        android:autofillHints="password"
        android:hint="Contraseña"
        android:background="@drawable/edit_text_border"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"/>

    <Button
        android:id="@+id/ingresar"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="80sp"
        android:text="Ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password1"
        app:cornerRadius="5sp"
        android:backgroundTint="@color/colorUno"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/registrar1"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:text="Registrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingresar"
        android:layout_marginTop="80sp"
        app:cornerRadius="5sp"
        android:backgroundTint="@color/colorUno"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>