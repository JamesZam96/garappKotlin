<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solicitudes_desconectado"
    android:background="#C1C1C1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.060"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:text="Solicitudes"
            android:textStyle="bold"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@+id/layout"
            app:layout_constraintStart_toStartOf="@+id/layout"
            app:layout_constraintTop_toTopOf="@+id/layout" />

        <Button
            android:id="@+id/updateinformation"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:text="Actualizar informacion"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request" />

        <Button
            android:id="@+id/reportaproblem"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Reportar un problema"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateinformation" />

        <Button
            android:id="@+id/registeranothervehicle"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Resgitrar otro vehiculo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reportaproblem" />

        <Button
            android:id="@+id/application1"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Solicitud 1"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registeranothervehicle"/>

        <Button
            android:id="@+id/application2"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Solicitud 2"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/application1"/>

        <Button
            android:id="@+id/application3"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Solicitud 3"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/application2"/>

        <Button
            android:id="@+id/application4"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Solicitud 3"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            app:cornerRadius="5sp"
            android:textColor="@color/white"
            android:backgroundTint="#FA3D3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/application3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>